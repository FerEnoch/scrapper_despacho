{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "dist/src/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node dist/server.js",
    "build": "NODE_ENV=production tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "dev": "nodemon",
    "back:test": "NODE_ENV=test vitest",
    "test:back:run": "NODE_ENV=test vitest --run",
    "fs-service:test": "NODE_ENV=test npx playwright test ./src/tests/integration/*.spec.ts --output ./src/tests/integration/.pw-last",
    "test:fs-service:run": "NODE_ENV=test npx playwright test ./src/tests/integration/*.spec.ts --output ./src/tests/integration/.pw-last",
    "fs-service:report:test": "NODE_ENV=test npx playwright test ./src/tests/integration/*.spec.ts --output ./src/tests/integration/.pw-last && npx playwright show-report",
    "test": "NODE_ENV=test npm-run-all test:*:run"
  },
  "dependencies": {
    "@playwright/test": "1.49.1",
    "bcrypt": "5.1.1",
    "better-sqlite3": "11.8.1",
    "chalk": "^5.4.1",
    "convert-csv-to-json": "2.50.0",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "^16.4.7",
    "express": "4.21.2",
    "express-fileupload": "1.5.1",
    "helmet": "8.0.0",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.0",
    "ms": "2.1.3",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/better-sqlite3": "7.6.12",
    "@types/cookie-parser": "1.4.8",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/express-fileupload": "1.5.1",
    "@types/helmet": "0.0.48",
    "@types/jsonwebtoken": "9.0.8",
    "@types/morgan": "1.9.9",
    "@types/ms": "2.1.0",
    "@types/node": "22.10.3",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-v8": "^3.0.5",
    "nodemon": "3.1.9",
    "npm-run-all": "4.1.5",
    "supertest": "7.0.0",
    "tsc-alias": "1.8.10",
    "typescript": "5.7.2",
    "vite-node": "3.0.2",
    "vitest": "3.0.5"
  }
}
